<div class="d-flex justify-content-between align-items-center p-3 bg-light">
<h1>Simple Airbnb</h1>
<%= link_to "Add flat", new_flat_path, class: "btn btn-primary" %>
</div>
<div class="container">
<h1>All our flats (<%= @flats.count %>)</h1>
<div class="container">
<div class="row row-cols-3">
<% @flats.each do |flat| %>
<div class="col p-3 d-flex flex-column">
  <div class="bg-light">
    <h3><%= flat.name %></h3>
    <p><%= flat.address %></p>
      <div class="d-flex">
        <h6 class="me-2"><i class="fa-solid fa-sterling-sign fa-sm"></i> <%= flat.price_per_night %></h6>
        <h6><i class="fa-solid fa-people-group fa-sm"></i> <%= flat.number_of_guests %></h6>
      </div>
    </div>
  </div>
  <div>
    <%= link_to "More info", flat_path(flat), class:"btn" %>
  </div>
</div>
<% end %>
